<h1><%= title %></h1>

<!-- Flash messages -->
<%- messages() %>

<form action="/account/login" method="POST" class="login-form">
  <!-- Email -->
  <label for="accountEmail">Email:</label>
  <input 
    type="email" 
    id="accountEmail" 
    name="account_email" 
    required 
    autocomplete="email" 
    placeholder="Enter your email">

  <!-- Password -->
  <label for="accountPassword">Password:</label>
  <input 
    type="password" 
    id="accountPassword" 
    name="account_password" 
    required 
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    title="Password must be at least 12 characters and include a capital letter, number, and special character."
    autocomplete="current-password"
    placeholder="Enter your password">

  <!-- Submit button -->
  <button type="submit">Login</button>
</form>

<!-- Sign-Up link -->
<p id="text">No account? <a href="/account/register">Sign-Up</a></p>
